{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../dist",
    "rootDir": "."
  },

  "files": [
    "app/app.module.ts",
    "main.ts"
  ],

  "angularCompilerOptions": {
   "skipMetadataEmit" : true
 }
}
